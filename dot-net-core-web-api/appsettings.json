{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },

    "Console": { //console provider
      "LogLevel": {
        "Default": "Error",
        "Microsoft.Hosting": "Trace"
      }
    },

    "Debug": { //debug provider
      "LogLevel": {
        "Default": "Trace", //overriders preceding LogLevel: default setting
        "Microsoft.Hosting": "Error"
      }
    }
  },
  "AllowedHosts": "*"
}


/*
  6. none
  5. critical
  4. error
  3. warning
  2. information
  1. debug
  0. trace

  whichever level is configured, logger will log from that particular level to higher level

*/
